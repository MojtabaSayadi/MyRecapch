<div class="row">

	<div class="col-lg-12">
		<form class="alx-contact-form" asp-action="Index" asp-controller="Home" method="post">
			<partial name="_CaptchaInput" />
			<div class="row">
				<div class="col-lg-6">
					<div class="alx-input-group" style="border:dashed solid">
						<input asp-for=Fullname placeholder="نام و نام خانوادگی شما "><i class="fa fa-user-o"></i>
					</div>
					<div>
						<span asp-validation-for="Fullname" style="color:red"></span>
					</div>
				</div>
				<div class="col-lg-6">
					<div class="alx-input-group">
						<input asp-for=PhoneNumber placeholder="شماره تماس شما "><i class="fa fa-at"></i>
						<div>
							<span asp-validation-for="PhoneNumber" style="color:red"></span>
						</div>
					</div>
				</div>
				<p>

				</p>
				<div class="col-lg-12">
					<div class="alx-input-group">
						<textarea asp-for="Message" rows="6" style="width:100%" placeholder="پیغام "></textarea><i class="fa fa-commenting-o"></i>
					</div>

					<div>
						<span asp-validation-for="Message" style="color:red"></span>
					</div>
					@if (ViewBag.AlertMessage != null)
					{
						<div class="alx-success-msg hide">
							<p>@ViewBag.AlertMessage</p>
						</div>
					}

					<input class="alx-btn" type="submit" value="ارسال پیغام">
				</div>
			</div>

		</form>
	</div>

</div>




